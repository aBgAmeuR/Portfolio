import ThemeToggle from "./common/ThemeToggle.astro";
---

<header class="mb-8 px-6 flex items-center justify-between">
  <div class="flex items-center gap-4">
    <Icon name="logo" class="h-8 w-16 overflow-visible" />
    <div class="flex flex-col">
      <h1 class="text-2xl font-semibold leading-6 tracking-tight">
        Antoine JOSSET
