---
import { music } from "../../contents/music";
import SectionTitle from "../SectionTitle.astro";
import MusicCard from "./music-card.astro";

export type Props = {
    className?: string;
}

const { className } = Astro.props;
---

<section class={`px-6 flex flex-col gap-2 ${className}`} aria-labelledby="tracks-title">
    <SectionTitle title="Grails List" id="tracks-title" />
    <div class="flex flex-col">
        {music.map((music) => <MusicCard {...music} />)}
    </div>
</section>
