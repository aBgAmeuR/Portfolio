---
import TechnologyTooltip from './TechnologyTooltip.astro';
import ProjectButton from './ProjectButton.astro';

export interface Props {
  title: string;
  description: string;
  image: string;
  imageAlt?: string;
  isVideo?: boolean;
  technologies: Array<{
    name: string;
    icon: string;
  }>;
  demoUrl?: string;
  codeUrl?: string;
}

const { title, description, image, imageAlt = "Project image", isVideo = false, technologies, demoUrl, codeUrl } = Astro.props;
---

<article>
  <div
    class="flex w-full flex-col gap-3 rounded-2xl border border-border bg-card p-3">
    <div class="w-full overflow-hidden rounded-xl aspect-video object-fill">
      {isVideo ? (
        <video src={image} autoplay loop muted playsinline width="1920" height="993"></video>
      ) : (
        <img src={image} width="1904" height="992" alt={imageAlt} class="size-full object-cover" />
      )}
    </div>
    <div class="flex flex-1 flex-col justify-between gap-3">
      <div>
        <h4 class="text-base font-medium text-neutral-800 dark:text-neutral-100">{title}</h4>
        <p class="text-sm text-neutral-500 dark:text-neutral-400">{description}</p>
      </div>
      <div class="flex items-center justify-between">
        <div class="flex gap-1">
          {technologies.map((tech) => (
            <TechnologyTooltip name={tech.name} icon={tech.icon} />
          ))}
        </div>
        <div class="flex items-center gap-1">
          {demoUrl && (
            <ProjectButton href={demoUrl} variant="demo" text="Tester" />
          )}
          {codeUrl && (
            <ProjectButton href={codeUrl} variant="code" text="Code" />
          )}
        </div>
      </div>
    </div>
  </div>
</article>
