---
import { Icon } from "astro-icon/components";

export interface Props {
  name: string;
  icon: string;
}

const { name, icon } = Astro.props;
---

<span
  class="tooltip scale-100 hover:scale-105 transition-all duration-100 relative group"
  role="img"
  aria-label={`Technologie ${name}`}
  title={name}
>
  <span
    class="tooltiptext"
    aria-hidden="true"
  >
    {name}
  </span>
  <Icon name={icon} class="size-4 text-primary" aria-hidden="true" />
</span>
