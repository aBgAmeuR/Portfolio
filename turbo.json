{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": [
    "**/.env"
  ],
  "ui": "tui",
  "envMode": "loose",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "deploy": {
      "outputs": [
        "apps/site/dist/**"
      ]
    }
  }
}